<div class='mt-3'>
  <% if current_user != user %>
  <% if current_user.following?(user) %>
  <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn-sm btn-danger btn-lg m-3" %>
  <% else %>
  <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn-sm btn-success btn-lg m-3" %>
  <% end %>
  <% end %>
</div>