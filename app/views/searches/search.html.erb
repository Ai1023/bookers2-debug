<h2><%= @range %>s search for "<%= @word %>"</h2>

<table class="table table-hover table-inverse">

  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
        <tr>
          <td><%= image_tag user.get_profile_image, size:"50x50" %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <th>image</th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size:"50x50" %></td>
          <td><%= link_to book.title, book %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>